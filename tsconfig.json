{
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "lib",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules", "lib"]
}
